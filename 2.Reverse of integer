class Solution:
    def reverse(self, x: int) -> int:
        if x>0:
            y=str(x)
            rev=y[::-1]
            rev= int(rev)
            return rev
        else:
            sign=-1
            x=abs(x)
            y=str(x)
            rev=y[::-1]
            rev= int(rev)*sign
            return rev

